{
    "manifest_version": 2,

    "name": "Plug Notify",
    "description": "A Chrome Extension that sends desktop notifications about current song being played and @mentions in chat.",
    "version": "1.0.0",
    "icons": { "128": "img/icon-128.png" },

    "content_scripts": [{
        "matches": [
            "http://plug.dj/*",
            "https://plug.dj/*"
        ],
        "css": ["style.css"],
        "js": ["inject.js"]
    }],
    "permissions": [
        "storage",
        "http://plug.dj/*",
        "https://plug.dj/*"
    ],
    "options_page": "options.html",
    "web_accessible_resources": ["main.js"]

}
